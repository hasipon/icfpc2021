{% extends "base.jinja2 " %}
{% block content %}

<div class="container">
    <form role="form" action="/" method="GET">
        <div class="form-group form-inline">
            <label>Dislike</label>
            <input type="text" placeholder="1" name="dislike-min" class="form-control">
            <label>～</label>
            <input type="text" placeholder="999" name="dislike-max" class="form-control">
        </div>

        <div class="form-group form-inline">
            <label>TopDislike</label>
            <input type="text" placeholder="1" name="top-dislike-min" class="form-control">
            <label>～</label>
            <input type="text" placeholder="999" name="top-dislike-max" class="form-control">
        </div>

        <div class="form-group form-inline">
            <label>Dislike/TopDislike %</label>
            <input type="text" placeholder="0" name="dislike-ratio-min" class="form-control">
            <label>～</label>
            <input type="text" placeholder="100" name="dislike-ratio-max" class="form-control">
        </div>

        <input type="hidden" name="search" value="1">
        <button class="btn btn-default"><span class="glyphicon glyphicon-search">検索</button>
    </form>
</div>

{% endblock %}

